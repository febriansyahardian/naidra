<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Febriansyah Ardian</title>
  <link href="/styles.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
  <style>
    @keyframes zoom {
      from { transform: scale(0.7); opacity: 0; }
      to { transform: scale(1); opacity: 1; }
    }
    .animate-zoom {
      animation-name: zoom;
      animation-duration: 0.6s;
    }
  </style>
</head>
<body class="font-['Roboto'] text-[#666] text-sm bg-gray-50 dark:bg-gray-900 dark:text-gray-200 transition-colors">
  <header id="mainHeader" class="bg-white dark:bg-gray-800 px-4 py-4 transition-all sticky top-0 z-40 duration-500">
    <div class="max-w-6xl mx-auto flex flex-row justify-between items-center gap-4">
      <img src="/img/ardy.png" class="h-12" />
      <div class="relative">
        <button id="menuToggle" class="block md:hidden text-xl">
          <i class="fas fa-bars"></i>
        </button>
        <nav id="navMenu" class="hidden md:flex md:flex-row md:items-center gap-4 font-semibold text-base sm:text-lg flex-col absolute top-full right-4 bg-white dark:bg-gray-800 shadow-md md:shadow-none md:static md:bg-transparent md:dark:bg-transparent rounded-md px-6 py-3 z-50 transition-all duration-300 ease-in-out absolute top-15 right-0 ">
          <a href="#hero" class=" p-2 block w-full hover:bg-gray-200">Home</a>
          <a href="#photography" class=" p-2 block w-full hover:bg-gray-200">Photography</a>
          <a href="#design" class=" p-2 block w-full hover:bg-gray-200">Design</a>
          <a href="#contact" class=" p-2 block w-full hover:bg-gray-200">Contact</a>
          <button id="toggleDark" class=" p-2 rounded text-sm w-full text-left">ðŸŒ™</button>
        </nav>
      </div>
      
    </div>
  </header>

  <section id="hero" class="py-14 sm:py-20 bg-white dark:bg-gray-800">
    <div class="max-w-6xl mx-auto px-4 flex flex-col md:grid md:grid-cols-2 items-center gap-6 md:gap-10">
      <img src="/img/image.jpg" class="rounded-lg w-40 sm:w-52 md:w-64 shadow-md mx-auto md:ml-32" />
      <div class="space-y-4 text-center md:text-left">
        <p class="text-2xl sm:text-3xl md:text-4xl font-bold tracking-tight">Halo! I'm Ardian Febriansyah.</p>
        <p class="text-base ">I'm on a journey to discover my passion.</p>
        <p class="text-base ">Interested in photography and graphic design.</p>
        <p class="text-base ">Here I try to share my experiences. Hope you enjoy it!</p>
        <div class="flex justify-center md:justify-start space-x-4 text-xl">
          <a href="https://instagram.com" target="_blank"><i class="fab fa-instagram"></i></a>
          <a href="https://youtube.com" target="_blank"><i class="fab fa-youtube"></i></a>
          <a href="https://linkedin.com" target="_blank"><i class="fab fa-linkedin"></i></a>
        </div>
        <p class="text-xs sm:text-sm">For business enquiries <a href="#" class="text-blue-600 underline">mail</a> me!</p>
      </div>
    </div>
  </section>

  <script>
    const header = document.getElementById('mainHeader');
    window.addEventListener('scroll', () => {
      if (window.scrollY > 10) {
        header.classList.add('shadow-md', 'bg-opacity-95', 'backdrop-blur');
      } else {
        header.classList.remove('shadow-md', 'bg-opacity-95', 'backdrop-blur');
      }
    });
  </script>

  <section id="photography" class="py-16 bg-white dark:bg-gray-900">
    <div class="max-w-6xl mx-auto px-4 text-center">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">Some Of My Photography</h2>
      <p class="mb-8 text-sm sm:text-base text-gray-600 dark:text-gray-400">Click on the image to preview.</p>
      <div id="photoGrid" class="grid grid-cols-2 md:grid-cols-3 gap-2">
        <% const photos = [1,29,4,22,16,106,28,8,3,2,23,98,11,12,164,118,7,10,9,24,15,77,25]; %>
        <% photos.forEach((p, i) => { %>
          <img src="/img/<%= p %>.jpg" class="myImages w-full h-32 sm:h-36 md:h-40 object-cover rounded-md shadow-md transition duration-300 ease-in-out transform hover:scale-105 hover:shadow-xl cursor-pointer fade-in hover:opacity-80 focus:outline-none focus:ring-2 focus:ring-gray-300 <%= i >= 9 ? 'hidden more-photo' : '' %>" />
        <% }) %>
      </div>
      <button id="seeMore" class="mt-6 px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">See More</button>
    </div>

    <div id="myModal" class="fixed hidden top-0 left-0 w-full h-full bg-black/80 z-50 flex items-center justify-center">
      <span class="close absolute top-4 right-6 text-white text-3xl cursor-pointer">&times;</span>
      <img id="img01" class="max-w-full max-h-[80vh] rounded-md shadow-lg animate-zoom" />
    </div>
  </section>

  <section id="design" class="py-16 bg-white dark:bg-gray-800">
    <div class="max-w-6xl mx-auto px-4 text-center">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">My Design Works</h2>
      <p class="mb-8 text-sm sm:text-base text-gray-600 dark:text-gray-400">Still working on it. Coming soon!</p>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-2">
        <div class="w-full h-32 sm:h-36 bg-gray-200 dark:bg-gray-700 rounded"></div>
        <div class="w-full h-32 sm:h-36 bg-gray-200 dark:bg-gray-700 rounded"></div>
        <div class="w-full h-32 sm:h-36 bg-gray-200 dark:bg-gray-700 rounded"></div>
      </div>
    </div>
  </section>

  <footer class="text-center text-xs py-6 text-gray-500 dark:text-gray-400">
    &copy; 2024 Ardian Febriansyah. All rights reserved.
  </footer>

  <script>
    const modal = document.getElementById("myModal");
    const modalImg = document.getElementById("img01");
    const images = document.querySelectorAll(".myImages");
    const closeBtn = document.querySelector(".close");
    const seeMoreBtn = document.getElementById("seeMore");
    const morePhotos = document.querySelectorAll(".more-photo");

    images.forEach(img => {
      img.addEventListener('click', () => {
        modal.classList.remove("hidden");
        modalImg.classList.remove("animate-zoom");
        void modalImg.offsetWidth;
        modalImg.src = img.src;
        modalImg.classList.add("animate-zoom");
      });
    });

    closeBtn.onclick = () => {
      modal.classList.add("hidden");
    };

    seeMoreBtn.onclick = () => {
      morePhotos.forEach(photo => photo.classList.remove("hidden"));
      seeMoreBtn.classList.add("hidden");
    };

    const toggleDark = document.getElementById("toggleDark");
    toggleDark.addEventListener("click", () => {
      document.documentElement.classList.toggle("dark");
    });

    const menuToggle = document.getElementById("menuToggle");
    const navMenu = document.getElementById("navMenu");

    menuToggle.addEventListener("click", () => {
      navMenu.classList.toggle("hidden");
    });

  </script>
<script src="https://cdn.tailwindcss.com"></script>
</body>
</html>
